{% extends "base.html.twig" %}

{% block main %}
    <div id="band-wrapper">
        <section class="band">
            <article>
                <form action="{{ path('create') }}" method="POST">
                    <div class="row">
                        <label for="bandName">Band name:</label>
                        <input type="text" id="bandName" name="band[name]" placeholder="Name" required>
                    </div>
                    <div class="row">
                        <label for="members">Members:</label>
                        <textarea rows="5" id="members" name="band[members]" placeholder="Member 1, Member 2, ..." required></textarea>
                    </div>
                    <div class="row">
                        <label for="honorarium">Honorarium:</label>
                        <input type="number" min="0" step="any" id="honorarium" name="band[honorarium]" placeholder="price" required>
                    </div>
                    <div class="row">
                        <label for="genre">Genre:</label>
                        <div class="genre-select">
                            <input type="radio" id="genre" name="band[genre]" value="Rock" checked>Rock
                            <input type="radio" id="genre" name="band[genre]" value="Metal">Metal
                            <input type="radio" id="genre" name="band[genre]" value="Pop">Pop
                            <input type="radio" id="genre" name="band[genre]" value="Other">Other
                        </div>
                    </div>


                    {{ form_row(form._token) }}
                    <div>
                        <button type="submit">Register</button>
                        <a href="{{ path("index") }}">Cancel</a>
                    </div>
                </form>
            </article>
        </section>
    </div>
{% endblock %}