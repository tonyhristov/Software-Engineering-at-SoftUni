{% extends "base.html.twig" %}

{% block main %}
    <div id="band-wrapper">
        <section class="band">
            <article>
                <form action="{{ path('delete', {'id': band.id}) }}" method="POST">
                    <h3>Do you want to remove the band from the list?</h3>
                    <div class="row">
                        <h2>{{ band.name }}</h2>
                    </div>
                    <div class="row">
                        <p>{{ band.members }}</p>
                    </div>
                    <div class="row">
                        <p>{{ band.honorarium }}$</p>
                    </div>
                    <div class="row">
                        <p>{{ band.genre }}</p>
                    </div>

                    {{ form_row(form._token) }}
                    <div>
                        <button type="submit">Remove</button>
                        <a href="{{ path('index') }}">Cancel</a>
                    </div>
                </form>
            </article>
        </section>
    </div>
{% endblock %}