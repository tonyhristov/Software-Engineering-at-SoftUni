{% extends "base.html.twig" %}

{% block main %}
    <div id="band-wrapper">
        <section class="band">
            <article>
                <form action="{{ path('edit', { id: band.id }) }}" method="POST">
                    <div class="row">
                        <label for="bandName">Band name:</label>
                        <input type="text" id="bandName" name="band[name]" value="{{ band.name }}" placeholder="Name" required>
                    </div>
                    <div class="row">
                        <label for="members">Members:</label>
                        <textarea rows="5" id="members" name="band[members]" placeholder="Member 1, Member 2, ..." required>{{ band.members }}</textarea>
                    </div>
                    <div class="row">
                        <label for="honorarium">Honorarium:</label>
                        <input type="text" id="honorarium" name="band[honorarium]" value="{{ band.honorarium }}" placeholder="price" required>
                    </div>
                    <div class="row">
                        <label for="genre">Genre:</label>
                        <div class="genre-select">
                            <input type="radio" id="genre" name="band[genre]" value="Rock" checked>Rock
                            <input type="radio" id="genre" name="band[genre]" value="Metal">Metal
                            <input type="radio" id="genre" name="band[genre]" value="Pop">Pop
                            <input type="radio" id="genre" name="band[genre]" value="Other">Other
                        </div>
                    </div>

                    {{ form_row(form._token) }}
                    <div>
                        <button type="submit">Edit</button>
                        <a href="{{ path('index') }}">Cancel</a>
                    </div>
                </form>
            </article>
        </section>
    </div>
{% endblock %}