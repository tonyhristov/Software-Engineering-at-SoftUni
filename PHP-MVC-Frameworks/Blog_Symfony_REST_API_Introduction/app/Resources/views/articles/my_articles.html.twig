{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <a href="{{ path('article_view', {id: article.id}) }}">
                            <img src="{{ article.imageURL }}" alt="Cannot load the picture" width="400" height="200">
                        </a>

                        <p>
                            {{ article.content }}
                        </p>

                        <small>
                            View: {{ article.viewCount }}
                        </small><br>
                        <small>
                            Date Added: {{ article.dateAdded | date("F jS \\a\\t g:ia") }}
                        </small>


                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-success btn-xs" href="{{ path('article_edit', {id: article.id}) }}">Edit
                                </a>
                                <a class="btn btn-danger btn-xs" href="{{ path('article_delete', {id: article.id}) }}">Delete
                                </a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}

            <div class="pull-right">
                <br/>
                <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">Back to Home page</a>
            </div>

        </div>
    </div>
{% endblock %}

